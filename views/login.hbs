    <div class="content-section no-padding login-area  first-section">
        <div class="row" style="padding: 100px 50px 100px 50px">
            <div class="col-lg row align-content-center justify-content-center" style="margin-left: 2px;">
                <div class="row justify-content-center align-items-center" style="width: 80%;">
                    <div class="login">
                        <div class="row justify-content-center">
                            <span class="title-section text-center" style="padding-bottom: 0;"> Đăng Nhập </span>
                        </div>
                        <form id="formLogin" action="" method="POST">
                            <div class="username">
                                <input id="username_form" name="username" type="text" class="user-input"
                                    placeholder="Tên đăng nhập">
                            </div>
                            <div class="password">
                                <input id="password_form" name="password" type="password" class="user-input"
                                    placeholder="Mật khẩu">
