{{#each borrow.books}}
<tr {{#if @first}}id="return-{{../borrow.id}}"{{/if}} {{#if_eq ../borrow.id ../activeID}}class="table-primary"{{/if_eq}}>
    {{!-- {{#if @first}}
    <th scope="row" rowspan="{{../borrow.books.length}}">{{../borrow.id}}</th>
    {{/if}} --}}
    <td>{{this.id}}</td>
    <td>
        <a href="/librarian/book?id={{this.id}}&&activeID={{../borrow.id}}#borrow-{{../borrow.id}}">
            {{this.name}}
        </a>
    </td>
    <td>{{this.author}}</td>    
    <td class="tab-cell-center">
        <a href="/librarian-api/borrow/return?id={{this.bid}}">
            <button class="btn btn-primary" type="button" id="btn-return-borrow">
                <i class="fa fa-check"></i>
            </button>
        </a>
        <a href="/librarian-api/borrow/lost?id={{this.bid}}">
            <button class="btn btn-danger" type="button" id="btn-delete-borrow">
                <i class="fa fa-trash"></i>
            </button>
        </a>
    </td>
    {{#if @first}}
    <td class="tab-cell-center" rowspan="{{../borrow.books.length}}">{{dateToString ../borrow.returnDueDate}}</td>
    {{/if}}
</tr>
{{/each}}
