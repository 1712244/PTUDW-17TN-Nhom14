<div class="container-fluid" style="padding:0; width:95%">
    <div class="content-section first-section bg-white no-padding">
        <div class="row justify-content-center" style="padding-top:50px">
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle" type="button" id="dropdown_searchtype"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sách
                </button>
                <div id="dropdown_searchtype_content" class="dropdown-menu" aria-labelledby="dropdown_searchtype">
                    <a class="dropdown-item" href="#">Sách</a>
                    <a class="dropdown-item" href="#">Tin tức</a>
                </div>
            </div>
            <form id="searchbar-in-picture" class="input-group col-8" method="POST">

                <input type="text" name="searchBar" class="form-control" placeholder="Tìm kiếm sách, tin tức, ..."
                    aria-label="Username" aria-describedby="basic-addon1" value="{{query}}">
                <div class="input-group-append">
                    <button type="submit" class="input-group-text"><img src="/images/search-icon.svg" alt=""
                            style="width: 20px;"></button>
                </div>
            </form>

        </div>
        <div id="books_section">
            <div class="row justify-content-center align-items-center" style="padding-top:10px">
                <div class="col-1"></div>
                <div class="col row justify-content-center">Có {{books_length}} kết quả</div>
                <div class="row align-items-center justify-content-center col-6">
                    <div>Sắp xếp theo </div>

                    <div class="dropdown">
                        <button class="btn btn-light dropdown-toggle" type="button" id="dropdown_filtertype"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Độ phổ biến
                        </button>
                        <div id="dropdown_filtertype_content" class="dropdown-menu"
                            aria-labelledby="dropdown_filtertype">
                            <a class="dropdown-item" href="#">Độ phổ biến</a>
                            <a class="dropdown-item" href="#">Gần nhất</a>
                        </div>
                    </div>
                </div>
                <div class="col row justify-content-center">+ Thêm bộ lọc</div>
                <div class="col-1"></div>
            </div>
            <div class="tab-content">
                {{#each books}}
                {{#if @first}}
                <div class="tab-pane fade show active" id="pills-{{this.id}}" role="tabpanel"
                    aria-labelledby="pills-{{this.id}}-tab">
                    {{#each this.book}}
                    <a href="/book-detail/{{this._id}}">
                        <div class="row justify-content-center" style="padding: 10px;">
                            <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                                <div class="d-flex justify-content-end">
                                    <img src={{this.image_url}} alt="">

                                </div>
                            </div>
                            <div class="col-6 col-sm-7 col-md-8 col-lg-8">
                                <div class=" title-search">{{this.book_name}}</div>
                                <div class="author-search">
                                    {{#each this.author}}
                                    {{this.name}}
                                    {{/each}}
                                </div>
                                <div style="overflow:hidden; text-overflow: ellipsis; color:black;">{{this.desc}}</div>
                            </div>
                        </div>
                    </a>
                    {{/each}}
                </div>
                {{else}}
                <div class="tab-pane fade" id="pills-{{this.id}}" role="tabpanel"
                    aria-labelledby="pills-{{this.id}}-tab">
                    {{#each this.book}}
                    <a href="/book-detail/{{this._id}}">
                        <div class="row justify-content-center" style="padding: 10px;">
                            <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                                <div class="d-flex justify-content-end">
                                    <img src={{this.image_url}} alt="">

                                </div>
                            </div>
                            <div class="col-6 col-sm-7 col-md-8 col-lg-8">
                                <div class=" title-search">{{this.book_name}}</div>
                                <div class="author-search">
                                    {{#each this.author}}
                                    {{this.name}}
                                    {{/each}}
                                </div>
                                <div style="overflow:hidden; text-overflow: ellipsis; color:black;">{{this.desc}}</div>
                            </div>
                        </div>
                    </a>
                    {{/each}}
                </div>
                {{/if}}
                {{/each}}
            </div>


            <nav id="book_nav">
                <ul class="nav nav-pills pagination justify-content-center" role="tablist">
                    <li class="page-item nav-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    {{#each books}}
                    {{#if @first}}
                    <li class="page-item nav-item"><a class="page-link nav-link active" id="pills-{{this.id}}-tab" data-toggle="pill"
                            href="#pills-{{this.id}}" role="tab" aria-controls="pills-{{this.id}}"
                            aria-selected="true">{{this.id}}</a></li>
                    {{else}}
                    <li class="page-item nav-item"><a class="page-link nav-link" id="pills-{{this.id}}-tab" data-toggle="pill"
                            href="#pills-{{this.id}}" role="tab" aria-controls="pills-{{this.id}}"
                            aria-selected="false">{{this.id}}</a></li>
                    {{/if}}
                    {{/each}}
                    <li class="page-item nav-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>


        <div id="news_section" style="display: none;">
            <div class="row justify-content-center align-items-center" style="padding-top:10px">
                <div class="col-1"></div>
                <div class="col row justify-content-center">Có {{news.length}} kết quả</div>
                <div class="row align-items-center justify-content-center col-6">
                    <div>Sắp xếp theo </div>

                    <div class="dropdown">
                        <button class="btn btn-light dropdown-toggle" type="button" id="dropdown_filtertype"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Độ phổ biến
                        </button>
                        <div id="dropdown_filtertype_content" class="dropdown-menu"
                            aria-labelledby="dropdown_filtertype">
                            <a class="dropdown-item" href="#">Độ phổ biến</a>
                            <a class="dropdown-item" href="#">Gần nhất</a>
                        </div>
                    </div>
                </div>
                <div class="col row justify-content-center">+ Thêm bộ lọc</div>
                <div class="col-1"></div>
            </div>
            {{#each news}}
            <a href="/news-detail/{{this._id}}">
                <div class="row justify-content-center" style="padding: 10px;">
                    <div class="col-4 col-sm-3 col-md-2">
                        <div class="d-flex justify-content-end">
                            <img src={{this.image_url}} alt="">

                        </div>
                    </div>
                    <div class="col-6 col-sm-7 col-md-8">
                        <div class=" title-search">{{this.title}}</div>
                        <div class="author-search">{{this.date}}</div>
                        <div style="overflow:hidden; text-overflow: ellipsis; color:black;">{{this.desc}}</div>
                    </div>
                </div>
            </a>

            {{/each}}
            <nav id="news_nav">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>


    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
<script src="/function/dropdown-search.js"></script>