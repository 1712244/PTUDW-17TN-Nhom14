<link rel="stylesheet" href="/stylesheets/style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<meta http-equiv="content-type" content="application/vnd.ms-excel; charset=UTF-8">
<div class="bg-white container-fluid" style="width: 100%;">
    <div class="display-flex ">
        <div class="text-color-408CFF font-size-xx" style="flex: 0.95;">
            Quản lý tài khoản
        </div>

        <div class="csv-area" style="float: right">
            <div class="export-csv" id="btn">
                <i class="fa fa-table" aria-hidden="true"></i>Xuất file csv
            </div>
            <div class="input-csv"><i class="fa fa-table" aria-hidden="true"></i>Nhập từ file csv</div>
        </div>
    </div>
    <div class="search-area row padding-top-3em ">
        <div id="" class="input-group col-md-6 padding-right-3em">
            <input type="text" id="search-acc" class="form-control" placeholder="Tìm id, username, ..."
                aria-label="Username" aria-describedby="basic-addon1">
            <div class="input-group-append">
                <a class="input-group-text" href="#"><img src="/images/search-icon.svg" alt="" style="width: 20px;"></a>
            </div>
        </div>
        <div class="row col-md-6 justify-content-center mt-2 mt-md-0">
            <div class="padding-right-3em col text-center">
                <select name="Loại tài khoản" id="account-type" style="height: 40px; border-radius: 10px">
                    <option value="type">Loại tài khoản</option>
                    <option value="teacher">Giáo viên</option>
                    <option value="student">Sinh viên</option>
                </select>
            </div>

            <div class="col">
                <select name="trạng thái" id="status" class="text-center" style="height: 40px; border-radius: 10px">
                    <option value="status">Trạng thái</option>
                    <option value="activate">Hoạt động</option>
                    <option value="deactivate">Ngưng hoạt động</option>
                </select>
            </div>
        </div>

    </div>
    <div class="table-responsive padding-top-3em">
        <table class="table" id="table-manager">
            <thead>
                <tr>
                    <th scope="col">Mã tài khoản</th>
                    <th scope="col">Tên Đăng Nhập</th>
                    <th scope="col">Email</th>
                    <th scope="col">Tên người dùng</th>
                    <th scope="col">Loại tài khoản</th>
                    <th scope="col">Số sách chưa trả</th>
                    <th scope="col">Tổng sách</th>
                    <th scope="col">Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                {{#each account_data}}

                <tr class="account-data">
                    <th scope="row" class="l-height-3">{{this.accountID}}</th>
                    <th scope="row" class="l-height-3"> {{this.account_name}}</th>
                    <th class="l-height-3">{{this.email}}</th>
                    <th class="l-height-3"> {{this.username}}</th>
                    <th class="l-height-3"> {{this.type}}</th>
                    <th class="l-height-3 text-center"> {{this.book_left}}</th>
                    <th class="l-height-3 text-center"> {{this.total}}</th>
                    <th class="l-height-3"> {{this.activate}}</th>
                </tr>

                {{/each}}
            </tbody>

        </table>
    </div>
    <div style="padding-bottom: 3em;">
    </div>

<script src="/function/nav-lib.js" current_page="Quản lí tài khoản"></script>
<script src="/function/csv.js"></script>
